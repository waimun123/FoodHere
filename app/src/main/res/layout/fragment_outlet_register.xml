<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/background_color">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fo_register"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="32sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"/>

            <TextView
                    android:text="@string/email_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_username"
                    android:textSize="18sp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="@id/tv_register"
                    app:layout_constraintTop_toBottomOf="@+id/tv_register"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_username"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:inputType="textEmailAddress"
                    app:layout_constraintStart_toStartOf="@id/tv_register"
                    app:layout_constraintEnd_toEndOf="@id/tv_register"
                    app:layout_constraintTop_toBottomOf="@id/tv_username"/>

            <TextView
                    android:text="@string/password_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_password"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_username"
                    app:layout_constraintTop_toBottomOf="@+id/et_username"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_password"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintEnd_toEndOf="@id/et_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_password"/>

            <TextView
                    android:text="@string/confirmpass_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_confirmpass"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintTop_toBottomOf="@+id/et_password"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_confirmpass"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_confirmpass"
                    app:layout_constraintEnd_toEndOf="@id/et_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_confirmpass"/>

            <TextView
                    android:text="@string/outlet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_outlet_name"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintTop_toBottomOf="@+id/et_confirmpass"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_fullname"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:digits="@string/only_name"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_confirmpass"
                    app:layout_constraintEnd_toEndOf="@id/et_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_outlet_name"/>

            <TextView
                    android:text="@string/contact_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_mobile"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintTop_toBottomOf="@+id/et_fullname"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_mobile"
                    android:textSize="18sp"
                    android:inputType="number"
                    android:maxLength="12"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_confirmpass"
                    app:layout_constraintEnd_toEndOf="@id/et_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_mobile"/>

            <TextView
                    android:text="@string/address_line_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_address_1"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintTop_toBottomOf="@+id/et_mobile"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_address_1"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_confirmpass"
                    app:layout_constraintEnd_toEndOf="@id/et_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_1"/>

            <TextView
                    android:text="@string/address_line_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_address_2"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintTop_toBottomOf="@+id/et_address_1"/>

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_address_2"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@id/tv_confirmpass"
                    app:layout_constraintEnd_toEndOf="@id/et_username"
                    app:layout_constraintTop_toBottomOf="@id/tv_address_2"/>

            <TextView
                    android:text="@string/register"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:id="@+id/tv_register_next"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_border"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintEnd_toEndOf="@id/et_address_1"
                    app:layout_constraintTop_toBottomOf="@+id/et_address_2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>